<Window x:Class="Bakalaurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakalaurs"
        xmlns:viewmodels="clr-namespace:Bakalaurs.ViewModels"
        xmlns:views="clr-namespace:Bakalaurs.Views"
        mc:Ignorable="d"
        Title="Element Tester" Height="720" Width="1280">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodels:MainMenuViewModel}">
                <views:MainMenuView/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
