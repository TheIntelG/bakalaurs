<Window
    x:Class="Bakalaurs.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bakalaurs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Bakalaurs.ViewModels"
    xmlns:views="clr-namespace:Bakalaurs.Views"
    Title="Element Tester"
    Width="1600"
    Height="900"
    mc:Ignorable="d">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodels:MainMenuViewModel}">
                <views:MainMenuView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ElementMenuViewModel}">
                <views:ElementMenuView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:TesterViewModel}">
                <views:TesterView />
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
